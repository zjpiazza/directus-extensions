{
	"name": "email-bundle",
	"description": "Email input field with client-side UI and server-side validation",
	"icon": "extension",
	"version": "1.0.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-bundle"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "interface",
				"name": "email-input",
				"source": "src/interface/index.ts"
			},
			{
				"type": "display",
				"name": "email-display",
				"source": "src/display/index.ts"
			},
			{
				"type": "hook",
				"name": "email-validation-hook",
				"source": "src/hook/index.ts"
			}
		],
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"add": "directus-extension add"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "16.0.2"
	}
}
